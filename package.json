{
  "name": "desktop-activation-platform",
  "private": true,
  "version": "0.1.0",
  "packageManager": "bun@1.2.21",
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev": "bun run --filter \"*\" dev",
    "dev:backend": "bun run --filter backend dev",
    "dev:frontend": "bun run --filter frontend dev",
    "build": "bun run --filter \"*\" build",
    "build:backend": "bun run --filter backend build",
    "build:frontend": "bun run --filter frontend build",
    "start:backend": "bun run --filter backend start",
    "preview:frontend": "bun run --filter frontend preview"
  },
  "devDependencies": {
    "@types/node": "^25.2.3",
    "@types/pg": "^8.16.0",
    "bun-types": "^1.3.9",
    "drizzle-kit": "^0.31.9",
    "typescript": "^5.9.3"
  }
}
